<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Titel</th>
        <th>Datum</th>
        <th>Beskrivning</th>
        <th>Token</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <td><%= link_to ticket.title, 'tickets/' + ticket.token  %></td>
          <td><%= ticket.dateOfEvent.strftime('%Y-%m-%d') %></td>
          <% if ticket.message.length > 20 %>
            <td><%= ticket.message.first(20) + '...' %></td>
          <% else %>
            <td><%= ticket.message %></td>
          <% end %>
          <td><%= ticket.token %></td>
          <td><%#= link_to 'Show', 'tickets/' + ticket.token %></td>
          <td><%#= link_to 'Edit', edit_ticket_path(ticket) %></td>
          <td><%= link_to 'Delete', ticket, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

