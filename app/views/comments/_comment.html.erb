<% if !comment.content.nil? %>
  <div class="panel panel-default">
    <div class="panel-body">
      <p><%= comment.content %></p>
      <% if comment.user_id != nil %>
        <% if !User.find(comment.user_id).nil? %>
          <% if user_signed_in? %>
            <span style="color: #EC6A41"> <em>Skickat av <%= User.find(comment.user_id).name %></em></span>
          <% else %>
            <span style="color: #EC6A41"> <em>Skickat av <%= User.find(comment.user_id).role %></em></span>
          <% end %>
        <% else %>
          <span style="color: #EC6A41"> <em>Skickat av moderator </em></span>
        <% end %>
      <% else %>

      <em>Skickat av anonym</em>
      <% end %>
      <% if !comment.created_at.nil? %>
        <em>f√∂r <%= time_ago_in_words(comment.try(:created_at), locale: 'sv') %> sedan.</em>
      <% end %>
    </div>
  </div>
  <br>
<% end %> 